extends ../../layouts/admin

append breadcrumbs
  li.active= title

block body
  table.table.table-hover.table-striped
    thead
      tr
        th Display Name
        th Created
        th Updated
        th Is Owner?
        th Actions
    tbody
    if (users.length)
      each user in users
        tr
          td: a(href='/users/#{user.slug}/') #{user.displayName}
          td= user.created
          td= user.updated
          td
            if User.isOwner(user)
              span.text-info: strong True
            else
              span.text-warning False
          td
            a(href='/admin/users/#{user.slug}/edit', class='btn btn-default',
              role='button')
              i.fa.fa-pencil
            | 
            a(href='/admin/users/#{user.slug}/delete', class='btn btn-danger',
                role='button')
              i.fa.fa-times
    else
      tr: td(colspan=5) No Users Found.