extends ../../layouts/admin

append breadcrumbs
  li: a(href='/admin/posts') Posts Administration
  li.active= title

block body
  form(action='/admin/posts/#{post.slug}', method='post', role='form')
    include _form

    input(type='hidden', name='user_id', value=post.user_id)
    input(type='hidden', name='_csrf', value=token)
    input(type='hidden', name='_method', value='put')

    button.btn.btn-primary(type='submit')
      i.fa.fa-plus
      |  Edit Post
    | 
    a.btn.btn-default(href='/admin/posts', role='button') Cancel