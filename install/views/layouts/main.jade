doctype html
html(lang="en")
  head
    title= title
    meta(name='description', content=description)
    link(rel='canonical', href=canonical)
    block head
      include ../partials/head

  body
    <!--Begin Top-Nav-->
    block top-nav
      include ../partials/top-nav

    <!--Begin Content Container-->
    .container#main
      <!--Begin Header-->
      block header
        .row: .col-md-12
          .page-header
            h1= title
              small.pull-right Subtitle

      <!--Begin Alerts-->
      include ../partials/alerts

      <!--Begin Main Content-->
      .row
        .col-md-8
          <!--Begin Body Content-->
          h2#title= title
          block body
        .col-md-4
          <!--Begin Sidebar-->
          p.date.text-info.hidden-tablet.hidden-phone Date
          block sidebar
            include ../partials/side-nav-links
            include ../partials/side-nav-tags
            include ../partials/side-nav-archives

      <!--Begin Footer-->
      block footer
        include ../partials/footer