doctype html
html(lang="en")
  head
    title= title
    block head
      include ../partials/head

  body
    <!--Begin Top-Nav-->
    block top-nav
      include ../partials/top-nav

    <!--Begin Content Container-->
    .container
      <!--Begin Header-->
      block header
        .row: .col-md-12
          .page-header
            h1= title || 'Site Administration'
              small.pull-right Subtitle.

      <!--Begin Breadcrumbs-->
      ul.breadcrumb
        block breadcrumbs
          li
            a(href="/admin") admin home
            span.divider /

      <!--Begin Alerts-->
      include ../partials/alerts

      <!--Begin Main Content-->
      .row
        .col-md-12
          h2= title
          block body

      <!--Begin Footer-->
      block footer
        include ../partials/footer